<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:exitFadeDuration="100">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorLightGray" />
            <stroke android:color="@color/colorWhite" android:width="2.5dp" />
            <corners android:radius="512dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorLightGray" />
            <stroke android:color="@color/colorWhite" android:width="1dp" />
            <corners android:radius="512dp" />
        </shape>
    </item>
</selector>